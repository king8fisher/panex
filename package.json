{
  "name": "panex",
  "version": "0.9.0",
  "description": "Terminal UI for running multiple processes in parallel",
  "type": "module",
  "bin": {
    "panex": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run src/cli.ts",
