  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/bun": "^1.3.5",
    "@types/node": "^22.10.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
